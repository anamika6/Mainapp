<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.baj.ana.mainapp.AeActivity"
    tools:showIn="@layout/activity_ae">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llsyllabus"
        android:layout_margin="7dp"

        android:elevation="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SYLLABUS"
            android:id="@+id/textView21"
            android:layout_weight="80"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/imageView15"
            android:layout_weight="20"
            android:src="@drawable/s"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llquestion"
        android:layout_below="@+id/llsyllabus"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"

        android:elevation="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="QUESTION PAPERS"
            android:id="@+id/textView22"
            android:layout_weight="80"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/imageView21"
            android:layout_weight="20"
            android:src="@drawable/qp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llmockup"
        android:layout_below="@+id/llquestion"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        android:elevation="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MOCK UP"
            android:id="@+id/textView23"
            android:layout_weight="80"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/imageView22"
            android:layout_weight="20"
            android:src="@drawable/mu"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/llsyllabus"
        android:layout_alignParentStart="true"
        android:background="#777"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/llquestion"
        android:layout_alignParentStart="true"
        android:background="#777"></LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/llmockup"
        android:layout_alignParentStart="true"
        android:background="#777"></LinearLayout>


</RelativeLayout>
